# Sample configuration file for db-tools.sh
# Copy this file to .db-tools.conf and adjust the settings

# Database URL (can be used instead of environment variables)
# Format: postgresql://username:password@host:port/database
# DB_URL="postgresql://username:password@localhost:5432/mydatabase"

# Backup location
BACKUP_DIR="./backups"

# Compression type: gzip, xz, none
COMPRESS="gzip"

# Enable/disable encryption (true/false)
ENCRYPT=false

# Backup rotation (days to keep backups, 0 = keep indefinitely)
ROTATION_DAYS=30

# Number of parallel jobs for compression (only used with xz compression)
PARALLEL_JOBS=4

# Enable verbose logging
VERBOSE=false

# Log file location
LOG_FILE="./logs/db-tools.log"

# ========== Advanced Options ==========

# Tables to include in backup/restore (comma-separated, empty = all tables)
# INCLUDE_TABLES="users,products,orders"

# Tables to exclude from backup/restore (comma-separated)
# EXCLUDE_TABLES="logs,sessions,cache"

# Backup format (p=plain text, c=custom, d=directory, t=tar)
# FORMAT="p"

# Schema-only or data-only (true/false)
SCHEMA_ONLY=false
DATA_ONLY=false

# Include large objects
WITH_BLOBS=false

# Maximum number of parallel connections (for directory format and restore)
MAX_CONNECTIONS=8

# Show progress during operations (requires 'pv' tool)
PROGRESS=false

# Hook scripts (executed before/after operations)
# PRE_BACKUP_HOOK="./scripts/pre-backup.sh"
# POST_BACKUP_HOOK="./scripts/post-backup.sh"
# PRE_RESTORE_HOOK="./scripts/pre-restore.sh"
# POST_RESTORE_HOOK="./scripts/post-restore.sh" 